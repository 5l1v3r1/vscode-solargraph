{
    "name": "solargraph",
    "displayName": "Ruby Solargraph",
    "description": "Code completion and inline documentation for Ruby",
    "icon": "solargraph.png",
    "version": "0.5.0",
    "publisher": "castwide",
    "author": {
        "name": "Fred Snyder"
    },
    "files": [
        "views"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/castwide/vscode-solargraph"
    },
    "license": "MIT",
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "Ruby",
        "autocomplete",
        "intellisense",
        "YARD",
        "code completion"
    ],
    "preview": true,
    "engines": {
        "vscode": "^1.5.0"
    },
    "activationEvents": [
        "onLanguage:ruby",
        "onCommand:solargraph.search",
        "onCommand:solargraph.restart"
    ],
    "contributes": {
        "configuration": {
            "title": "Solargraph settings for Ruby",
            "properties": {
                "solargraph.commandPath": {
                    "type": "string",
                    "default": "solargraph",
                    "description": "Path to the solargraph command.  Set this to an absolute path to select from multiple installed Ruby versions.",
                    "isExecutable": true
                },
                "solargraph.useBundler": {
                    "type": "boolean",
                    "description": "Use `bundle exec` to run solargraph. (If this is true, the solargraph.commandPath setting is ignored.)",
                    "default": false
                },
                "solargraph.withSnippets": {
                    "type": "boolean",
                    "description": "Include snippets with completion suggestions.",
                    "default": false
                }
            }
        },
        "commands": [
            {
                "command": "solargraph.search",
                "title": "Search Ruby Documentation"
            },
            {
                "command": "solargraph.restart",
                "title": "Restart Solargraph"
            }
        ],
        "keybindings": [
            {
                "command": "solargraph.search",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r"
            }
        ]
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "request": "^2.79.0",
        "html2plaintext": "^1.1.0",
        "solargraph-utils": "^0.1.0"
    }
}
